{% extends "../layouts/main-layout.njk" %}
{% block title %}
  reset password
{% endblock %}
{% block extraStyles %}
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/auth.css">
{% endblock %}
{% block mainContent %}
  {% if errorMsg and errorMsg.length > 0 %}
    <p class="user-message user-message--error">{{errorMsg}}</p>
  {% endif %}
  {% if infoMsg and infoMsg.length > 0 %}
    <p class="user-message">{{infoMsg}}</p>
  {% endif %}
  <form class="login-form" action="/reset-password" method="POST">
    <div class="form-control">
      <label for="email">E-Mail</label>
      <input type="email" name="email" id="email">
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    <button class="btn" type="submit">Reset Password</button>
  </form>
{% endblock %}