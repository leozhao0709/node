    {% if not isLoggedIn %}
      <li class="main-header__item">
        <a class="{{ 'active' if path === '/login' else '' }}" href="/login">Login</a>
      </li>
      <li class="main-header__item">
        <a class="{{ 'active' if path === '/signup' else '' }}" href="/signup">Signup</a>
      </li>
    {% else %}
      <li class="main-header__item">
        <form action="/logout" method="post">
          <button type="submit">Logout</button>
          <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
        </form>
      </li>
    {% endif %}
  </ul>
</nav>

