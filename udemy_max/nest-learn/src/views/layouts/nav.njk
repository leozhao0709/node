<button id="side-menu-toggle">Menu</button>
<nav class="main-header__nav">
  <ul class="main-header__item-list">
    <li class="main-header__item">
      <a href="/shop" class="{{ 'active' if path === '/shop' else '' }}">Shop</a>
    </li>
    <li class="main-header__item">
      <a href="/shop/products" class="{{ 'active' if path === '/shop/products' else '' }}">Products</a>
    </li>
    <li class="main-header__item">
