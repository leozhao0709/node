{
  "name": "nest-learn",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:clean && yarn build:typescript && yarn build:resource",
    "build:clean": "rm -rf dist",
    "build:typescript": "tsc -p tsconfig.build.json",
    "build:resource": "cp -rf src/views src/public dist/",
    "clean": "rm -rf node_modules dist yarn.lock",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nodemon",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.9.1",
    "connect-mongodb-session": "^2.1.1",
    "csurf": "^1.10.0",
    "express-flash-message": "^1.0.5",
    "express-session": "^1.16.1",
    "mongoose": "^5.5.5",
    "mysql": "^2.17.1",
    "nunjucks": "^3.2.0",
    "pdfkit": "^0.9.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.2",
    "typeorm": "^0.2.16",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-mongodb-session": "^0.0.0",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/jest": "^23.3.13",
    "@types/mongoose": "^5.3.27",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.12.18",
    "@types/nunjucks": "^3.1.1",
    "@types/pdfkit": "^0.7.36",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
